<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Customer.DetailWedding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginBottom="@dimen/title_size_16"
                android:layout_marginRight="@dimen/padding_16"
                android:layout_marginLeft="@dimen/padding_16"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/wedding1"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/title_size_16"
            android:background="@drawable/edit_profile">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_8"
                android:text="@string/florida_tent"
                android:textSize="@dimen/title_size_32"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="@string/bogor"
                android:textStyle="italic"
                android:textSize="@dimen/title_size_12"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/tv_desc_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_16"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:lineSpacingMultiplier="1"
                android:text="@string/desc_item"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/padding_16"
                android:layout_marginLeft="@dimen/padding_16">
                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_profile"
                    android:layout_marginRight="@dimen/padding_16"
                    android:layout_marginLeft="@dimen/padding_16">
                    <Button
                        android:id="@+id/btn_chat"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/ic_email_darked_35dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:background="@drawable/edit_profile"
                    android:layout_marginRight="@dimen/padding_16"
                    android:layout_marginLeft="@dimen/padding_16">
                    <Button
                        android:id="@+id/btn_favorite"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/ic_favorite_darked_35dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>